{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "esnext",
		//"outDir": "../../dist/client",
		"paths": {
			"three/examples/jsm/libs/dat.gui.module": [
				"../../node_modules/@types/dat.gui"
			]
		},
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true
	},
	"ts-node": {
		"compilerOptions": {
			"baseUrl": "./",
			"module": "CommonJS",
			"target": "es5",
			"esModuleInterop": true
		}
	},
	"include": ["*", "src/**/*.ts", "src/**/*.js", "src/*", "src/animate/ship_joystick"],
	"exclude": ["node_modules"]
}
